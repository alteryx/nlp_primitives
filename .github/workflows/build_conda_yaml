name: Build Conda Distribution
on:
  pull_request:
    types: [opened, synchronize]
  push:
    branches:
      - main
  workflow_dispatch:
jobs:
  unit_tests:
    name: build conda distribution
    runs-on: ${{ matrix.os }}
    strategy:
      matrix:
        os: [ubuntu-latest]
    steps:
      - nuses: actions/setup-python@v3
        with:
          python-version: "3.10"
      - name: Install requirements
        run: |
          git clone git@github.com:conda-forge/nlp_primitives-feedstock.git
          python build-locally.py linux_python3.6
